<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:id="@+id/titulo"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="De tamaño grande, a tu elección."/>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circulo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintHorizontal_bias="0.10"
        android:src="@drawable/traje"

        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="descripción de la prenda"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:id="@+id/descrpcion"
        app:layout_constraintStart_toEndOf="@id/circulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintBottom_toTopOf="@id/boton3"

        />


    <Button
        android:id="@+id/boton3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/descrpcion"
        app:layout_constraintTop_toTopOf="parent"
        android:text="me gusta"
        />













</androidx.constraintlayout.widget.ConstraintLayout>